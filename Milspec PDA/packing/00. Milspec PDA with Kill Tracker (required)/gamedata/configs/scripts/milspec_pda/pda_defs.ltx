; This file stores the definitions for which PDAs (by section name) are supported, and
; what features they support.

[valid_pdas]
device_pda_1
device_pda_2
device_pda_3
device_pda_milspec
device_pda_actor
;device_pda_added_by_your_mod

[device_pda_1]
; PDA 1.0 - starter
obeybl				= true		; Obeys faction blacklist
show_e				= false 	; Show enemies?
show_n 				= false 	; Show neutral?
show_f 				= false 	; Show friendly?
show_k 				= false 	; Show kills? (For KilTrak integration)
progmult 			= 0.0 		; Progression gain multiplier

; PDA 2.0
[device_pda_2]
obeybl				= true
show_e				= false
show_n 				= false
show_f 				= true
show_k 				= true
progmult 			= 0.1

; PDA 3.1
[device_pda_3]
obeybl				= true
show_e				= false
show_n 				= true
show_f 				= true
show_k 				= true
progmult 			= 0.5

; Milspec PDA
[device_pda_milspec]
obeybl				= true
show_e				= true
show_n 				= true
show_f 				= true
show_k 				= true
progmult 			= 1

; Old World addon?
[device_pda_actor]
obeybl				= true
show_e				= true
show_n 				= true
show_f 				= true
show_k 				= true
progmult 			= 1

